@model LifeSure.WebApp.Models.DataModels.Tbl_Employee
@{
    ViewBag.Title = "Add Employee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    *, *::before, *::after {
        box-sizing: border-box;
    }
</style>

<h2 style="font-family:'Space Mono',monospace;font-size:1.5rem;margin-bottom:1.5rem;color:#2e2e2e;">Add New Employee</h2>

<form action="/Admin/AddEmployee" method="post" style="max-width:480px;margin:0 auto;background:#f8f5e4;border:2px solid #b7eac5;border-radius:14px;padding:2rem 1.5rem;box-shadow:0 2px 8px #b7eac540;">
    <div style="margin-bottom:1.2rem;">
        <label for="Name" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Name</label>
        <input type="text" id="Name" name="Name" value="@(Model != null ? Model.Name : "")" required
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter employee name" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="Surname" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Surname</label>
        <input type="text" id="Surname" name="Surname" value="@(Model != null ? Model.Surname : "")" required
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter employee surname" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="Title" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Title</label>
        <input type="text" id="Title" name="Title" value="@(Model != null ? Model.Title : "")" required
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter employee title" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="Facebook" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Facebook URL</label>
        <input type="url" id="Facebook" name="Facebook" value="@(Model != null ? Model.Facebook : "")"
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter Facebook profile URL" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="X" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">X (Twitter) URL</label>
        <input type="url" id="X" name="X" value="@(Model != null ? Model.X : "")"
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter X (Twitter) profile URL" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="LinkedIn" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">LinkedIn URL</label>
        <input type="url" id="LinkedIn" name="LinkedIn" value="@(Model != null ? Model.LinkedIn : "")"
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter LinkedIn profile URL" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="Instagram" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Instagram URL</label>
        <input type="url" id="Instagram" name="Instagram" value="@(Model != null ? Model.Instagram : "")"
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter Instagram profile URL" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="ImageURL" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Image URL</label>
        <input type="url" id="ImageURL" name="ImageURL" value="@(Model != null ? Model.ImageURL : "")"
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter employee image URL" />
    </div>
    <div style="display:flex;justify-content:flex-end;">
        <button type="submit"
                style="background:#b7eac5;color:#2e2e2e;border:none;padding:0.7rem 1.6rem;border-radius:10px;font-family:'Space Mono',monospace;font-size:1.08rem;font-weight:bold;letter-spacing:1px;cursor:pointer;box-shadow:0 2px 8px #b7eac540;transition:background 0.2s, color 0.2s;">
            Add Employee
        </button>
    </div>
</form>