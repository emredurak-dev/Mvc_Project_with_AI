@model LifeSure.WebApp.Models.DataModels.Tbl_Contact
@{
    ViewBag.Title = "Add Contact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    *, *::before, *::after {
        box-sizing: border-box;
    }
</style>

<h2 style="font-family:'Space Mono',monospace;font-size:1.5rem;margin-bottom:1.5rem;color:#2e2e2e;">Add New Contact</h2>

<form action="/Admin/AddContact" method="post" style="max-width:480px;margin:0 auto;background:#f8f5e4;border:2px solid #b7eac5;border-radius:14px;padding:2rem 1.5rem;box-shadow:0 2px 8px #b7eac540;">
    <div style="margin-bottom:1.2rem;">
        <label for="Address" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Address</label>
        <input type="text" id="Address" name="Address" value="@(Model != null ? Model.Address : "")" required
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter address" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="Email" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Email</label>
        <input type="email" id="Email" name="Email" value="@(Model != null ? Model.Email : "")" required
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter email" />
    </div>
    <div style="margin-bottom:1.2rem;">
        <label for="Phone" style="display:block;font-family:'Space Mono',monospace;font-size:1.08rem;color:#2e2e2e;margin-bottom:0.4rem;">Phone</label>
        <input type="text" id="Phone" name="Phone" value="@(Model != null ? Model.Phone : "")" required
               style="width:100%;padding:0.6rem 0.8rem;border:1.5px solid #b7eac5;border-radius:8px;font-size:1rem;font-family:'Quicksand',monospace;background:#fffbe9;color:#2e2e2e;outline:none;"
               placeholder="Enter phone number" />
    </div>
    <div style="display:flex;justify-content:flex-end;">
        <button type="submit"
                style="background:#b7eac5;color:#2e2e2e;border:none;padding:0.7rem 1.6rem;border-radius:10px;font-family:'Space Mono',monospace;font-size:1.08rem;font-weight:bold;letter-spacing:1px;cursor:pointer;box-shadow:0 2px 8px #b7eac540;transition:background 0.2s, color 0.2s;">
            Add Contact
        </button>
    </div>
</form>