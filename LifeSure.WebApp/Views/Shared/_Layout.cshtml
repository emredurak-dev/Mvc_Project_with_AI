@model LifeSure.WebApp.Models.CombinedUserViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName)">

<head>
    <meta charset="utf-8">
    <title>@Resources.SharedResource.SiteTitle</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- google web fonts & css -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght%400,9..40,100..1000;1,9..40,100..1000&family=Inter:slnt,wght%40-10..0,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/LifeSure-1.0.0/lib/animate/animate.min.css" />
    <link href="~/LifeSure-1.0.0/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/LifeSure-1.0.0/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/LifeSure-1.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/LifeSure-1.0.0/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- spinner -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">@Resources.SharedResource.Loading</span>
        </div>
    </div>
    <!-- topbar -->
    <div class="container-fluid topbar px-0 px-lg-4 bg-light py-2 d-none d-lg-block">
        <div class="container">
            <div class="row gx-0 align-items-center">
                <div class="col-lg-8 text-center text-lg-start mb-lg-0">
                </div>
                <div class="col-lg-4 text-center text-lg-end">
                    <div class="d-flex justify-content-end">
                        <div class="d-flex border-end border-primary pe-3">
                            <a class="btn p-0 text-primary me-3" href="https://x.com/@Model.TwitterUser.Username"><i class="fab fa-twitter">(@Model.TwitterUser.FollowersCount)</i></a>
                            <a class="btn p-0 text-primary me-0" href="https://linkedin.com/in/@Model.LinkedInUser.PublicIdentifier"><i class="fab fa-linkedin-in">(@Model.LinkedInUser.FollowersCount)</i></a>
                        </div>
                        <div class="dropdown ms-3">
                            <a href="#" class="dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                <small>
                                    <i class="fas fa-globe-europe text-primary me-2"></i>
                                    @(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "tr" ? Resources.SharedResource.Turkish : Resources.SharedResource.English)
                                </small>
                            </a>
                            <div class="dropdown-menu rounded">
                                <a href="@Url.Action("Change", "Language", new { lang = "en", returnUrl = Request.RawUrl })" class="dropdown-item">@Resources.SharedResource.English</a>
                                <a href="@Url.Action("Change", "Language", new { lang = "tr", returnUrl = Request.RawUrl })" class="dropdown-item">@Resources.SharedResource.Turkish</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- navbar & hero -->
    <div class="container-fluid nav-bar px-0 px-lg-4 py-lg-0">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a href="#" class="navbar-brand p-0">
                    <h1 class="text-primary mb-0"><i class="fab fa-slack me-2"></i> SafeHaven.</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-0 mx-lg-auto">
                        <a href="index.html" class="nav-item nav-link active">@Resources.SharedResource.Home</a>
                        <a href="about.html" class="nav-item nav-link">@Resources.SharedResource.AboutUs</a>
                        <a href="service.html" class="nav-item nav-link">@Resources.SharedResource.Services</a>
                        <a href="blog.html" class="nav-item nav-link">@Resources.SharedResource.Blog</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" data-bs-toggle="dropdown">
                                <span class="dropdown-toggle">@Resources.SharedResource.Pages</span>
                            </a>
                            <div class="dropdown-menu">
                                <a href="feature.html" class="dropdown-item">@Resources.SharedResource.OurFeaturesNav</a>
                                <a href="team.html" class="dropdown-item">@Resources.SharedResource.OurTeamNav</a>
                                <a href="testimonial.html" class="dropdown-item">@Resources.SharedResource.TestimonialNav</a>
                                <a href="FAQ.html" class="dropdown-item">@Resources.SharedResource.FAQsNav</a>
                                <a href="404.html" class="dropdown-item">@Resources.SharedResource.Page404</a>
                            </div>
                        </div>
                        <a href="contact.html" class="nav-item nav-link">@Resources.SharedResource.Contact</a>
                        <div class="nav-btn px-3">
                            <button class="btn-search btn btn-primary btn-md-square rounded-circle flex-shrink-0" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @RenderBody()

    <!-- footer -->
    <div class="container-fluid copyright py-4">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-md-6 text-center text-md-end mb-md-0">
                    <span class="text-body"><a href="#" class="border-bottom text-white"><i class="fas fa-copyright text-light me-2"></i>SafeHaven</a>, @Resources.SharedResource.AllRightsReserved</span>
                </div>
                <div class="col-md-6 text-center text-md-start text-body">
                    <!--/*** This template is free as long as you keep the below author's credit link/attribution link/backlink. ***/-->
                    <!--/*** If you'd like to use the template without the below author's credit link/attribution link/backlink, ***/-->
                    <!--/*** you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". ***/-->
                    @Resources.SharedResource.DesignedBy <a class="border-bottom text-white" href="#">ed.</a> @Resources.SharedResource.DistributedBy <a class="border-bottom text-white" href="#">ThemeWagon.</a>
                </div>
            </div>
        </div>
    </div>
    <!-- back to top -->
    <a href="#" class="btn btn-primary btn-lg-square rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>
    <!-- js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/LifeSure-1.0.0/lib/wow/wow.min.js"></script>
    <script src="~/LifeSure-1.0.0/lib/easing/easing.min.js"></script>
    <script src="~/LifeSure-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="~/LifeSure-1.0.0/lib/counterup/counterup.min.js"></script>
    <script src="~/LifeSure-1.0.0/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/LifeSure-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/LifeSure-1.0.0/js/main.js"></script>
</body>
</html>